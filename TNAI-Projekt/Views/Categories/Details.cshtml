@model TNAI_Proj.Model.Entities.Category

@{
    ViewData["Title"] = "Category Details";
}

<div class="container mt-4">
    <h1>@Model.Name</h1>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-4">Description</dt>
                <dd class="col-sm-8">@Model.Description</dd>

                <dt class="col-sm-4">Display Order</dt>
                <dd class="col-sm-8">@Model.DisplayOrder</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4">
        <h2>Cars in this Category</h2>
        <div class="row">
            @if(Model.Cars != null){
            @foreach (var item in Model.Cars)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100">
                        <div class="position-relative">
                            @if (!string.IsNullOrEmpty(item.ImagePath))
                            {
                                <img src="@item.ImagePath" class="card-img-top" alt="@item.Name" style="height: 200px; object-fit: cover;">
                            }
                            else
                            {
                                <img src="~/images/default-car.jpg" class="card-img-top" alt="Default Car Image" style="height: 200px; object-fit: cover;">
                            }
                            <span class="position-absolute top-0 end-0 badge bg-primary m-2">
                                @item.Category?.Name
                            </span>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text text-muted">@item.Description</p>
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <span class="h4 mb-0">$@item.Price.ToString("N2")</span>
                                <span class="badge bg-success">@(item.IsAvailable ? "Available" : "Sold")</span>
                            </div>
                            <div class="car-details mb-3">
                                <div class="row g-2">
                                    <div class="col-6">
                                        <small class="text-muted d-block">Year</small>
                                        <span>@item.Year</span>
                                    </div>
                                    <div class="col-6">
                                        <small class="text-muted d-block">Mileage</small>
                                        <span>@item.Mileage.ToString("N0") km</span>
                                    </div>
                                    <div class="col-6">
                                        <small class="text-muted d-block">Transmission</small>
                                        <span>@item.Transmission</span>
                                    </div>
                                    <div class="col-6">
                                        <small class="text-muted d-block">Fuel Type</small>
                                        <span>@item.FuelType</span>
                                    </div>
                                </div>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                    <a asp-controller="Cars" asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary">
                                    <i class="fas fa-info-circle me-1"></i>Details
                                </a>
                                @if (User.IsInRole("Admin"))
                                {
                                    <div class="btn-group">
                                            <a asp-controller="Cars" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                            <a asp-controller="Cars" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
            }
        </div>
    </div>

    <div class="mt-4">
        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
        {
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
        }
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div> 