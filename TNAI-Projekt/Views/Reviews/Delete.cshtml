@model TNAI_Proj.Model.Entities.Review

@{
    ViewData["Title"] = "Delete Review";
}

<div class="container mt-4">
    <h1>Delete Review</h1>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@Model.Car?.Name</h5>
                    <h6 class="card-subtitle mb-3 text-muted">
                        @for (int i = 0; i < Model.Rating; i++)
                        {
                            <i class="fas fa-star text-warning"></i>
                        }
                        @for (int i = Model.Rating; i < 5; i++)
                        {
                            <i class="far fa-star text-warning"></i>
                        }
                    </h6>
                    <p class="card-text">@Model.Comment</p>
                    <p class="text-muted">
                        <small>
                            By @Model.User?.Name on @Model.CreatedAt.ToString("g")
                            @if (Model.IsVerified)
                            {
                                <i class="fas fa-check-circle text-success" title="Verified Review"></i>
                            }
                        </small>
                    </p>

                    <form asp-controller="Reviews" asp-action="Delete" asp-route-id="@Model.Id" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="alert alert-danger">
                            Are you sure you want to delete this review? This action cannot be undone.
                        </div>
                        <div class="btn-group">
                            <button type="submit" class="btn btn-danger">Delete</button>
                            <a asp-controller="Orders" asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 