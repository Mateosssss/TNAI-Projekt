@model IEnumerable<TNAI_Proj.Model.Entities.Review>
@using System.Security.Claims

@{
    ViewData["Title"] = "Reviews";
    var userId = User.FindFirstValue(ClaimTypes.NameIdentifier);
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">My Reviews</h1>
        <a asp-controller="Orders" asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to Orders
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i>You haven't written any reviews yet.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card h-100 shadow-sm hover-shadow">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <h5 class="card-title mb-0">@item.Car?.Name</h5>
                                <span class="badge bg-primary">@item.Car?.Category?.Name</span>
                            </div>
                            
                            <div class="rating mb-3">
                                @for (int i = 0; i < item.Rating; i++)
                                {
                                    <i class="fas fa-star text-warning"></i>
                                }
                                @for (int i = item.Rating; i < 5; i++)
                                {
                                    <i class="far fa-star text-warning"></i>
                                }
                            </div>

                            <p class="card-text review-comment">@item.Comment</p>

                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <small class="text-muted">
                                    <i class="far fa-clock me-1"></i>
                                    @item.CreatedAt.ToString("g")
                                    @if (item.IsVerified)
                                    {
                                        <i class="fas fa-check-circle text-success ms-2" title="Verified Review"></i>
                                    }
                                </small>
                                @if (userId != null && item.UserId.ToString() == userId)
                                {
                                    <div class="btn-group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm">
                                            <i class="fas fa-edit me-1"></i>Edit
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">
                                            <i class="fas fa-trash-alt me-1"></i>Delete
                                        </a>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .hover-shadow {
        transition: all 0.3s ease;
    }
    
    .hover-shadow:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }

    .review-comment {
        min-height: 60px;
        line-height: 1.6;
    }

    .rating {
        font-size: 1.2rem;
    }

    .card {
        border: none;
        border-radius: 10px;
    }

    .btn-group .btn {
        border-radius: 5px;
        margin: 0 2px;
    }

    .badge {
        font-size: 0.8rem;
        padding: 0.5em 0.8em;
    }
</style>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-font-awesome-kit.js" crossorigin="anonymous"></script>
} 