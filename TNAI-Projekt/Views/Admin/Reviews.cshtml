@model IEnumerable<TNAI_Proj.Model.Entities.Review>

@{
    ViewData["Title"] = "Manage Reviews";
}

<div class="container mt-4">
    <h1 class="mb-4">Manage Reviews</h1>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>User</th>
                    <th>Car</th>
                    <th>Rating</th>
                    <th>Comment</th>
                    <th>Date</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var review in Model)
                {
                    <tr>
                        <td>@review.Id</td>
                        <td>@review.User?.Name</td>
                        <td>@review.Car?.Name</td>
                        <td>
                            <div class="text-warning">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <i class="fas fa-star@(i <= review.Rating ? "" : "-o")"></i>
                                }
                            </div>
                        </td>
                        <td>
                            <button class="btn btn-sm btn-outline-primary" type="button" 
                                    data-bs-toggle="collapse" 
                                    data-bs-target="#comment-@review.Id">
                                View Comment
                            </button>
                            <div class="collapse mt-2" id="comment-@review.Id">
                                <div class="card card-body">
                                    <small>@review.Comment</small>
                                </div>
                            </div>
                        </td>
                        <td>@review.CreatedAt.ToString("g")</td>
                        <td>
                            <span class="badge @(review.IsVerified ? "bg-success" : "bg-warning")">
                                @(review.IsVerified ? "Verified" : "Pending")
                            </span>
                        </td>
                        <td>
                            @if (!review.IsVerified)
                            {
                                <form asp-action="VerifyReview" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@review.Id" />
                                    <button type="submit" class="btn btn-success btn-sm">
                                        <i class="fas fa-check"></i> Verify
                                    </button>
                                </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-font-awesome-kit.js"></script>
} 