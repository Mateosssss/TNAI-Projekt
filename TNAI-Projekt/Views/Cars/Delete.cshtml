@model TNAI_Proj.Model.Entities.Car

@{
    ViewData["Title"] = "Confirmation";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">

            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">Car Details</h5>
                    <div class="row">
                        <div class="col-md-5">
                            @if (!string.IsNullOrEmpty(Model?.ImagePath))
                            {
                                <img src="@Model.ImagePath" class="img-fluid rounded" alt="@Model.Name">
                            }
                            else
                            {
                                <img src="~/images/default-car.jpg" class="img-fluid rounded" alt="Default Car Image">
                            }
                        </div>
                        <div class="col-md-7">
                            <p><strong>@Model?.Name</strong> @Model.Category?.Name</p>
                            <p><strong>Year:</strong> @Model.Year</p>
                            <p><strong>Transmission:</strong> @Model.Transmission</p>
                            <p><strong>Fuel Type:</strong> @Model.FuelType</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Are you sure you want to delete the car?</h5>

                    <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
                        <button type="submit" class="btn btn-primary">Yes</button>
                        <a asp-controller="Cars" asp-action="Index" class="btn btn-danger">No</a>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}