@model TNAI_Proj.Models.Review

@{
    ViewData["Title"] = "Add Review";
}

<div class="container mt-4">
    <h2>Add Review</h2>
    <hr />
    <div class="row">
        <div class="col-md-8">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="CarId" />
                
                <div class="form-group mb-3">
                    <label asp-for="Rating" class="control-label">Rating</label>
                    <select asp-for="Rating" class="form-control">
                        <option value="">Select Rating</option>
                        <option value="1">1 Star</option>
                        <option value="2">2 Stars</option>
                        <option value="3">3 Stars</option>
                        <option value="4">4 Stars</option>
                        <option value="5">5 Stars</option>
                    </select>
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Comment" class="control-label">Your Review</label>
                    <textarea asp-for="Comment" class="form-control" rows="4" placeholder="Share your experience with this car..."></textarea>
                    <span asp-validation-for="Comment" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Submit Review</button>
                    <a asp-controller="Orders" asp-action="Details" asp-route-id="@ViewBag.OrderId" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 