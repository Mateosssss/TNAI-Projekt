@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-4">
    <h1 class="mb-4">Admin Dashboard</h1>

    <div class="row">
        <div class="col-md-3 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Users Management</h5>
                    <p class="card-text">Manage user accounts, view user details, and handle user-related operations.</p>
                    <a asp-action="Users" class="btn btn-primary">Manage Users</a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Orders Management</h5>
                    <p class="card-text">View and manage orders, update order statuses, and track order history.</p>
                    <a asp-action="Orders" class="btn btn-primary">Manage Orders</a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Cars Management</h5>
                    <p class="card-text">Manage car inventory, update car details, and handle car-related operations.</p>
                    <a asp-action="Cars" class="btn btn-primary">Manage Cars</a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Reviews Management</h5>
                    <p class="card-text">Moderate user reviews, verify reviews, and manage review content.</p>
                    <a asp-action="Reviews" class="btn btn-primary">Manage Reviews</a>
                </div>
            </div>
        </div>
    </div>
</div> 