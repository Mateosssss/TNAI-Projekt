@model TNAI_Proj.Models.Car

@{
    ViewData["Title"] = "Delete Car";
}

<div class="container mt-4">
    <h1>Delete Car</h1>
    <div class="alert alert-danger">
        <h4>Are you sure you want to delete this car?</h4>
        <p>This action cannot be undone.</p>
    </div>

    <div class="row">
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-4">Name</dt>
                <dd class="col-sm-8">@Model.Name</dd>

                <dt class="col-sm-4">Category</dt>
                <dd class="col-sm-8">@Model.Category?.Name</dd>

                <dt class="col-sm-4">Dealership</dt>
                <dd class="col-sm-8">@Model.Dealership?.Name</dd>

                <dt class="col-sm-4">Price</dt>
                <dd class="col-sm-8">@Model.Price.ToString("C")</dd>

                <dt class="col-sm-4">Year</dt>
                <dd class="col-sm-8">@Model.Year</dd>

                <dt class="col-sm-4">Status</dt>
                <dd class="col-sm-8">
                    <span class="badge @(Model.IsAvailable ? "bg-success" : "bg-danger")">
                        @(Model.IsAvailable ? "Available" : "Sold")
                    </span>
                </dd>

                <dt class="col-sm-4">Current Owner</dt>
                <dd class="col-sm-8">@(Model.User?.Name ?? "None")</dd>
            </dl>

            <form asp-action="DeleteCar">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Cars" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div> 