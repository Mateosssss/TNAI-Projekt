@model TNAI_Proj.Models.Order

@{
    ViewData["Title"] = "Order Details";
}

<div class="container mt-4">
    <h2>Order Details</h2>
    <hr />
    @if (Model == null)
    {
        <div class="alert alert-danger">Order not found.</div>
    }
    else
    {
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Order #@Model.Id</h5>
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>Car:</strong> @Model.Car?.Name</p>
                        <p><strong>Total Amount:</strong> $@Model.TotalAmount.ToString("N2")</p>
                        <p><strong>Status:</strong> @Model.Status</p>
                        <p><strong>Order Date:</strong> @Model.OrderDate.ToString("g")</p>
                        <p><strong>Payment Method:</strong> @Model.PaymentMethod</p>
                        <p><strong>Notes:</strong> @Model.Notes</p>
                    </div>
                </div>

                @if (User.IsInRole("Admin"))
                {
                    <div class="mt-4">
                        <h6>Update Order Status</h6>
                        <form asp-action="UpdateStatus" method="post" class="d-flex gap-2">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <select name="status" class="form-select" style="max-width: 200px;">
                                @{
                                    var statuses = new[] { "Pending", "Completed", "Cancelled", "Refunded" };
                                    foreach (var status in statuses)
                                    {
                                        <option value="@status" selected="@(Model.Status == status)">@status</option>
                                    }
                                }
                            </select>
                            <button type="submit" class="btn btn-primary">Update Status</button>
                        </form>
                    </div>
                }

                @if (Model.Status == "Completed" && Model.Car != null)
                {
                    <div class="mt-3">
                        <a asp-controller="Reviews" asp-action="Create" asp-route-carId="@Model.CarId" class="btn btn-primary">Add Review</a>
                    </div>
                }
            </div>
        </div>
    }
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to Orders</a>
    </div>
</div> 