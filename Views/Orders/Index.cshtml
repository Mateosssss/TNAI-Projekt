@model IEnumerable<TNAI_Proj.Models.Order>

@{
    ViewData["Title"] = "My Orders";
}

<div class="container mt-4">
    <h1>My Orders</h1>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Order #@item.Id</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@item.Car?.Name</h6>
                        <p class="card-text">
                            <strong>Status:</strong> @item.Status<br />
                            <strong>Total Amount:</strong> $@item.TotalAmount.ToString("N2")<br />
                            <strong>Order Date:</strong> @item.OrderDate.ToString("g")
                        </p>
                        <div class="btn-group">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                            @if (item.Status == "Pending")
                            {
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Update Status</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div> 