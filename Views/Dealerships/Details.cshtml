@model TNAI_Proj.Models.Dealership

@{
    ViewData["Title"] = "Dealership Details";
}

<div class="container mt-4">
    <h1>@Model.Name</h1>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-4">Address</dt>
                <dd class="col-sm-8">@Model.Address</dd>

                <dt class="col-sm-4">Phone Number</dt>
                <dd class="col-sm-8">@Model.PhoneNumber</dd>

                <dt class="col-sm-4">Email</dt>
                <dd class="col-sm-8">@Model.Email</dd>

                <dt class="col-sm-4">Manager</dt>
                <dd class="col-sm-8">@Model.ManagerName</dd>

                <dt class="col-sm-4">Operating Hours</dt>
                <dd class="col-sm-8">@Model.OperatingHours</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4">
        <h2>Available Cars</h2>
        <div class="row">
            @foreach (var car in Model.Cars.Where(c => c.IsAvailable))
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        @if (!string.IsNullOrEmpty(car.ImagePath))
                        {
                            <img src="@car.ImagePath" class="card-img-top" alt="@car.Name">
                        }
                        <div class="card-body">
                            <h5 class="card-title">@car.Name</h5>
                            <p class="card-text">@car.Description</p>
                            <p class="card-text">
                                <strong>Price:</strong> $@car.Price.ToString("N2")<br />
                                <strong>Year:</strong> @car.Year<br />
                                <strong>Mileage:</strong> @car.Mileage.ToString("N0") km
                            </p>
                            <a asp-controller="Cars" asp-action="Details" asp-route-id="@car.Id" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div> 