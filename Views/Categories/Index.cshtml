@model IEnumerable<TNAI_Proj.Models.Category>

@{
    ViewData["Title"] = "Car Categories";
}

<div class="container">
    <h1 class="mb-4">Car Categories</h1>

    <div class="row">
        @foreach (var category in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@category.Name</h5>
                        <p class="card-text">@category.Description</p>
                        <p class="card-text">
                            <small class="text-muted">Display Order: @category.DisplayOrder</small>
                        </p>
                    </div>
                    <div class="card-footer">
                        <a asp-action="Details" asp-route-id="@category.Id" class="btn btn-primary">View Cars</a>
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-warning btn-sm">Edit</a>
                            <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger btn-sm">Delete</a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div> 